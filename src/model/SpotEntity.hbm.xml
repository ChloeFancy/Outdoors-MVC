<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.SpotEntity" table="spot" schema="backup">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="idContinent">
            <column name="id_continent" sql-type="int(11)" />
        </property>
        <property name="idCountry">
            <column name="id_country" sql-type="int(11)" />
        </property>
        <property name="shortIntro">
            <column name="shortIntro" sql-type="text" />
        </property>
        <property name="introduction">
            <column name="introduction" sql-type="text"/>
        </property>
        <property name="photoPath">
            <column name="photoPath" sql-type="varchar(50)" length="50" />
        </property>
    </class>
</hibernate-mapping>